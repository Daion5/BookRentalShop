@model IEnumerable<BookRentalShop.Models.Category>

@{
    ViewData["Title"] = "Manage Categories";
}

<h1>Manage Categories</h1>

<p>
    <a asp-action="CreateCategory" class="btn btn-primary">Add New Category</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    <a asp-action="EditCategory" asp-route-id="@item.CategoryId" class="btn btn-primary">Edit</a>
                    <a asp-action="DeleteCategory" asp-route-id="@item.CategoryId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<P>
    <a asp-action="Index" asp-controller="Books" class="btn btn-secondary">Cancel</a>
</P>
